.pop-bg {
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 99;
}
.con {
  width: 100vw;
  height: 100vh;
  background-color: #f5f4f9;
  overflow: hidden;
}
.fs {
  align-self: flex-start;
}
.asc {
  align-self: center
}
.flex {
  display: flex;
  display: -webkit-flex;
  justify-content: center;
  align-items: center;
} 
.f-c {
   display: flex;
   flex-direction: column;
