/* pages/play2/pops/eventNormal.wxss */
.evt-con {
    width: 612rpx;
    height: 880rpx;
    overflow: hidden;
    border-radius: 40rpx;
    background-color: #fff;
    box-shadow: 0 0 10rpx 0rpx #000;
}
.pic-box {
    width: 100%;
    height: 595rpx;
    background-color: yellowgreen;
    position: relative;
}
.ten {
    position: absolute;
    display: inline-block;
    bottom: 20rpx;
    right: 20rpx;
    background-color: rgba(0,0,0, .5);
    border-radius: 20rpx;
    color: #ffffff;
    font-weight: bold;
    font-size: 30rpx;
    padding: 3rpx 10rpx;

}
.evt {
    margin: 0 auto;
    display: block;
    width: 90%;
    text-align: center;
    font-size: 30rpx;
    line-height: 44rpx;
    margin-top: 10rpx;
}

.next-evt {
    width: 328rpx;
    height: 112rpx;
    background: url("https://gengxin.odao.com/update/h5/travel/play/btn-blue.png") 0 0 no-repeat;
    background-size: cover;
    font-size: 28rpx;
    line-height: 110rpx;
    margin: 0 auto;
    margin-top: 50rpx;
    color: #fff;
    text-align: center;
}