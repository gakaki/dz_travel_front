/* pages/play2/pops/eventQuest.wxss */
.dialog_question, .dialog-result{
    width: 610rpx;
    height: 1100rpx;
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    padding: 20rpx;
}

.div_question {
    padding: 20rpx 0;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.div_answers {
    width: 100%;
}

.div_answers .answer_options {
    background-color: #EFEFEF;
    border-radius: 80rpx;
    text-indent: 40rpx;
    text-align: left;
    font-weight: 350;
    font-size: 32rpx;
    color: #959595;
    padding: 24rpx 0;
    margin: 0 10rpx 20rpx;
    box-sizing: border-box;
}

.question {
    padding: 30rpx 0rpx;
}

.pic-box {
    width: 580rpx;
    height: 446rpx;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
}

.pic {
    width: 750rpx;
    height: 600rpx;
    display: block;
    margin: 0 auto;
}

.point-pic {
    width: 100%;
    height: 100%;
}

.font_gray_big {
    font: bold 76rpx 'Microsoft YaHei';
    line-height: 76rpx;
    text-align: center;
    margin: 20rpx 0;
    color: gray;
}

.font_black {
    font: bold 50rpx 'Microsoft YaHei';
    line-height: 50rpx;
    color: black;
    text-align: center;
}

.content-box {
    text-align: center;
}

.ten {
    position: absolute;
    display: inline-block;
    bottom: 20rpx;
    right: 20rpx;
    background-color: rgba(0,0,0, .5);
    border-radius: 20rpx;
    color: #ffffff;
    font-weight: bold;
    font-size: 30rpx;
    padding: 3rpx 10rpx;

}

.head-font, .gray-font {
    font-size: 28rpx;
    display: block;
    text-align: justify;
    width: 100%;
}

.head-font {
    text-align: center;
    margin: 50rpx auto 20rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.gray-font {
    color: gray;
    text-align: left;
    margin: 10rpx 10rpx 0 50rpx;
    width: 86%;
    text-indent: -1em;
}

.congratulations-head-font {
    font-size: 62rpx;
    line-height: 62rpx;
    margin-bottom: 62rpx;
}
.congratulations-gray-font {
    font-size: 40rpx;
    line-height: 40rpx;
    margin-bottom: 175rpx;
    text-align: center;
}
.ml14 {
    margin-left: 14rpx;
}
.ml18 {
    margin-left: 18rpx;
    line-height: 40rpx;
}

.btn-big-blue {
    position: absolute;
    left: 50%;
    bottom: 10rpx;
    width: 406rpx;
    height: 121rpx;
    transform: translate(-50%);
    background: url("https://gengxin.odao.com/update/h5/travel/common/wid-max-bin.png") 0 0 no-repeat;
    background-size: cover;
    font-size: 28rpx;
    line-height: 94rpx;
    color: #fff;
    text-align: center;
}