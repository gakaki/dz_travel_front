/* pages/play2/play.wxss */
#play-page{
    position: relative;
}
#play-map {
    width: 100vw;
    height: 100vh;
}

.play-line {
    height: 0;
    border: 8rpx solid #666;
    border-width: 0 0 8rpx 0;
}

.dashed-line {
    border-style: dashed;
}
.play-role-nan {
    width: 36rpx;
    height: 81rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
.play-role-nv {
    width: 34rpx;
    height: 81rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
@keyframes role-clip-nan {
    100% {
        /*background-position: -218rpx 0;*/
        background-position: right 0;
    }
}

@keyframes role-clip-nv {
    100% {
        /*background-position: -196rpx 0;*/
        background-position: right 0;
    }
}
.stand {
    background-position: 0 0;
}
.walk-nan {
    animation: role-clip-nan 0.6s steps(5) infinite;
}
.walk-nv {
    animation: role-clip-nv 0.6s steps(5) infinite;
}

weather.sights {
    width: 50rpx;
    height: 50rpx;
    position: absolute;
}

.fontWhite {
    font: normal 30rpx 'Microsoft YaHei';
    color: #fff;
}
.zi {
    font: normal 26rpx 'Microsoft YaHei';
    color: #fff;
}
.font34 {
    font-size: 34rpx;
    line-height: 34rpx;
    text-align: center;
}

.font32 {
    font-size: 32rpx;
    line-height: 32rpx;
    text-align: center;
}

.font30 {
    font-size: 30rpx;
    line-height: 30rpx;
    text-align: center;
}

.font28 {
    text-align: center;
    font-size: 28rpx;
    line-height: 28rpx;
}

.font26 {
    text-align: center;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 26rpx;
}
.play-spots {
    transform: translate(-50%, -50%);
    text-align: center;
}

.play-spot-txt {
    display: block;
    font-size: 20rpx;
    font-weight: bold;
}

.play-spot-tm {
    position: absolute;
    top: -60rpx;
    left: 50%;
    font: 20rpx gray;
    transform: translate(-50%, 100%);
}
#play-pops, #play-pop-bg {
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
    position: fixed;
}

.controll-layer {
    position: fixed;
    top: 0;
    left: 0;
}

#play-pop-bg {
    background: rgba(0, 0, 0, .5);
}

.play-pop {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -52%);
}

.zoomBtn {
    width: 270rpx;
    position: fixed;
    left: 50%;
    bottom: 240rpx;
    transform: translate(-50%,0);
}

.zoomBtn .add {
    width: 105rpx;
    height: 70rpx;
    background: url("https://gengxin.odao.com/update/h5/travel/play/add.png") 0 0 no-repeat;
    background-size: cover;
}

.zoomBtn .minus {
    width: 105rpx;
    height: 70rpx;
    background: url("https://gengxin.odao.com/update/h5/travel/play/minus.png") 0 0 no-repeat;
    background-size: cover;
}

.weather {
    width: 46rpx;
    height: 46rpx;
    border: solid 3rpx #fff;
    position: fixed;
    right: 110rpx;
    top: 22rpx;
    border-radius: 3px;
}

.tip {
    background: url("https://gengxin.odao.com/update/h5/travel/play/tip.png") 0 0 no-repeat;
    background-size: cover;
    position: fixed;
    top: 20rpx;
    right: 20rpx;
    height: 54rpx;
    width: 54rpx;
}

.mission {
    background: url("https://gengxin.odao.com/update/h5/travel/play/missionBtn.png") 0 0 no-repeat;
    background-size: cover;
    position: fixed;
    bottom: 500rpx;
    right: 0;
    height: 124rpx;
    width: 169rpx;
}

.missionText {
    right: 34rpx;
    position: absolute;
    top: 28rpx;
}

.progressBox {
    width: 108rpx;
    background-color: rgba(0, 0, 0, 0.4);
    height: 20rpx;
    border-radius: 30rpx;
    position: absolute;
    top: 60rpx;
    right: 10rpx;
}

.progressBar {
    height: 16rpx;
    background-color: #dbff13;
    border-radius: 30rpx;
    position: absolute;
    top: 1rpx;
    left: 1rpx;
}

.changeLine {
    background: url("https://gengxin.odao.com/update/h5/travel/play/changeLine.png") 0 0 no-repeat;
    background-size: cover;
    position: fixed;
    bottom: 390rpx;
    right: 0;
    height: 124rpx;
    width: 169rpx;
}

.changeLineText {
    right: 10rpx;
    position: absolute;
    top: 26rpx;
}

.changeLineMoney {
    position: absolute;
    top: 27px;
    right: 18px;
}

