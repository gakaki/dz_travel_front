width: 200rpx;
  height: 46rpx;
  border-radius: 10rpx;
  background-color: rgba(0, 0, 0, 0.5);
  position: absolute;
  left: 50%;
  top: -60rpx;
  transform: translateX(-50%);
  font: bold 22rpx 'Microsoft YaHei';
  color: #fff;
  white-space: nowrap;
  z-index: 9;

}
.play-spot-tm::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  border: 6px solid transparent;
  border-top-color: rgba(0, 0, 0, 0.5);
  border-bottom: 0;
  border-left: 0;
  margin: 0 0 -6px -3px;
}
#play-pops, #play-pop-bg {
    width: 100vw;
    height: 100vh;
    top: 0;
    left: 0;
    position: fixed;
}

.controll-layer {
    position: fixed;
    top: 0;
    left: 0;
}

#play-pop-bg {
    background: rgba(0, 0, 0, .5);
}

.play-pop {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -52%);
}

.weather {
    width: 46rpx;
    height: 46rpx;
    border: solid 3rpx #fff;
    position: fixed;
    right: 110rpx;
    top: 22rpx;
    border-radius: 3px;
}

.tip {
    background: url("https://gengxin.odao.com/update/h5/travel/play/tip.png") 0 0 no-repeat;
