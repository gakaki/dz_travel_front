#play-page{
    position: relative;
}
#play-map {
    width: 100vw;
    height: 100vh;
}

.play-line {
    height: 0;
    border: 8rpx solid #666;
    border-width: 0 0 8rpx 0;
}
.solid-line {
border-radius: 4rpx
}
.dashed-line {
    border-style: dotted;
}
.play-role-nan {
    width: 36rpx;
    height: 81rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
.play-role-nv {
    width: 34rpx;
    height: 81rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
.play-role-haohua {
  width: 150rpx;
    height: 69rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
.play-role-shangwu {
  width: 118rpx;
    height: 92rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
.play-role-jingji {
  width: 109rpx;
  height: 63rpx;
    background-repeat: no-repeat;
    overflow: visible;
}
@keyframes role-clip-nan {
    100% {
        /*background-position: -218rpx 0;*/
        background-position: right 0;
    }
}

@keyframes role-clip-nv {
    100% {
        /*background-position: -196rpx 0;*/
        background-position: right 0;
    }
}
.stand {
    background-position: 0 0;
}
.walk-nan {
    animation: role-clip-nan 0.6s steps(5) infinite;
}
.walk-nv {
    animation: role-clip-nv 0.6s steps(5) infinite;
}

weather.sights {
