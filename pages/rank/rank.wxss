/* pages/rank/rank.wxss */
.head{
  height: 100rpx;
  width: 100%;
  background-color: #fff;
}

.rank-title{
  width: 200rpx;
  height: 60rpx;
}

.rank-head{
  width: 100%;
  height: 102rpx;
  border-bottom: 2rpx solid #e9e8ec;
  position: relative;
  z-index: 10;
}

.rank-item{
  width: 50%;
  height: 100rpx;
  text-align: center;
  font: bold 32rpx/100rpx 'Microsoft Yahei';
}

.rank-choose{
  color: #278cff;
  border-bottom: 4rpx solid #278cff;
}

.top-three{
  height: 317rpx;
  width: 100%;
  position: relative;
  align-items: flex-start;
}

.first, .second , .third{
  width: 33%;
  position: relative;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  flex-direction: column;
}

.first{
  order: 2;
  margin-top: 66rpx;
  left: 50%;
  transform: translate(-50%,0);
}

.second{
  order: 1;
  margin-top: 78rpx;
  left: 0;
}

.third{
  order: 3;
  margin-top: 97rpx;
  right: 0;
}

.first .mark{
  width: 61rpx;
  height: 49rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%,0);
  top: -40rpx;
  z-index: 1;
  background: url('https://gengxin.odao.com/update/h5/travel/rank/first.png') 0 0 no-repeat;
  background-size: cover;
  text-align: center;
  font: bold 30rpx/49rpx 'Microsoft Yahei';
  color: #e9922b;
}

.first .avatar{
  width: 130rpx;
  height: 130rpx;
  border: 5rpx solid #ffd400;
  border-radius: 50%;
  position: relative;
  z-index: 10;
}

.second .avatar{
  width: 117rpx;
  height: 117rpx;
  border: 5rpx solid #4e84e5;
  border-radius: 50%;
  position: relative;
  z-index: 10;
}

.second .mark{
  width: 55rpx;
  height: 45rpx;
  position: absolute;
  left: 50%;
  top: -37rpx;
  transform: translate(-50%,0);
  z-index: 1;
  background: url('https://gengxin.odao.com/update/h5/travel/rank/second.png') 0 0 no-repeat;
  background-size: cover;
  text-align: center;
  font: bold 26rpx/45rpx 'Microsoft Yahei';
  color: #fff;
}

.third .avatar{
  width: 100rpx;
  height: 100rpx;
  border: 5rpx solid #ffa525;
  border-radius: 50%;
