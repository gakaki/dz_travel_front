<!--pages/integral/integral.wxml-->
<view class='integral f-c'>
  <view class='back'>
    <audio class='audio audio-men' src=''></audio>
    <audio class='audio audio-women' src=''></audio>
    <view class='show'>
      <view class='show-wenzi'>
        <text class='jifen text-color1'>积分：</text>
        <text class='jinfenshu text-color'>{{integral}}</text>
      </view>
      <view class='show-wenzi wenzi-b'>
        <text class='jifenbang text-color1'>积分榜排名：{{rank?'':'未上榜'}}</text>
        <text class='paiming text-color'>{{rank?rank:''}}</text>
      </view>
    </view>
    <view class='pd'>本期积分兑换</view>
  </view>
  <scroll-view scroll-x class='exchange bs'>
    <view class="items {{index==shops.length-1 ? 'last-item' : ''}}" wx:for="{{shops}}" wx:key="{{index}}">
      <view>
        <image class='goods-tu' src="{{item.url}}"></image>
      </view>
      <view class="goods-zi">{{item.name}}</view>
      <view class="goods-fen">{{item.integral}}积分</view>
      <view class="goods-anniu" bindtap='exchange' data-id='{{item.id}}' data-int="{{item.integral}}" data-name="{{item.name}}">
        <text>兑换</text>
      </view>
    </view>
  </scroll-view >
  <view class='title'>
    <text>兑换详情</text>
  </view>
  <scroll-view scroll-y bindscrolltolower='lower' class='info-wrap'>
    <view  class="info" wx:for="{{exchangeDetail}}" wx:key="{{index}}">
      <view class='f-r-fs'>
        <avatar avatarWid="72" avatarHeg="72" src="{{item.avatarUrl}}" showGoldAndIntegral='{{false}}'></avatar>
        <text>{{item.nickName}}兑换了{{item.shopName}}</text>
      </view>
    </view>
  </scroll-view>
  <buy wx:if="{{exchange}}" cfmStr="确定" content="{{exchangeCon}}" outer-class="content" isBuy="{{false}}" bind:toclose="_cancel" bind:confirm="_confirm" cfmStr='{{cfmStr}}'></buy>
  <view class='xinxi-wrap' wx:if="{{confirmAdress}}">
    <view class='mask'></view>
     <view class="tanchuang">
      <view class="xinxi f-c-fs">
        <text class="fs">请核对快递信息</text>
        <text class="fs">收件人：{{userInfo.name}}</text>
        <text class="fs">手机号：{{userInfo.phoneNumber}}</text>
        <text class="fs">收货地址：{{userInfo.address}}</text>
      </view>
      <view class="anniu ">
        <view class="xiugai" bindtap='toSetting'>
          <text>修改快递信息</text>
        </view>
        <view class="quren" bindtap='confirmExc'>
          <text>确认</text>
        </view>
      </view>
    </view>
  </view> 
</view>