.bg {
  background-color: #f5f4f9
}
.tab {
  width: 100%;
  height: 92rpx;
  border-bottom: 2rpx solid #e9e8ec;
}
.tab-item {
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 92rpx;
  font-size: 30rpx;
  box-sizing: border-box
}
.act {
  color: #278cff;
  border-bottom: 4rpx solid #278cff
}
.list {
 margin: 0 auto;
 margin-bottom: 20rpx;
  background-color: #fff;
   width: 710rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx 2rpx rgba(0,0,0,.1)
}
.nomb {
  margin-bottom: 0;
}
.sv {
  position: fixed;
  left: 0;
  top: 92rpx;
  bottom: 0;
  right: 0;
  padding-top: 20rpx;
}
.spe-list {
   height: 160rpx;
}
.spe-pic {
   width: 130rpx;
  height: 130rpx;
  border-radius: 15rpx;
  margin: 15rpx 20rpx 15rpx 15rpx;
  background-color: bisque;
}
.fs {
  align-self: flex-start;
}
.num {
  margin-left: 20rpx;
  font-size: 31rpx;
  color: #fc6161;
}
.fen {
font: bold 30rpx 'Microsoft YaHei';
  color: #fc6161;
}
.spe-item-sec {
  flex-grow: 2;
  /* background-color: blue; */
  height: 100%;
}
.spe-name {
  font-size: 30rpx;
  margin-top: 10rpx;
}
.mmt {
  margin-top: 12rpx
}
.spe-sec-bot {
  margin: 24rpx 0 20rpx 0;
  width: 100%; 
}
.chat {
  width: 32rpx;
  height: 26rpx;
}
.chat-num {
  font-size: 28rpx;
  line-height: 68rpx;
  color: #8d8d8d;
  margin-left: 9rpx;
  flex-grow: 2
}
.more {
  font-size: 22rpx;
  color: #fff;
  background-color: #278cff;
   width: 120rpx;
  height: 36rpx;
  border-radius: 30rpx;
  text-align: center;
  line-height: 36rpx;
  letter-spacing: 2rpx;
  margin-right: 15rpx;
}
.point-top {
  border-bottom: 2rpx solid #e9e8ec
}
.point-list {
  height: 230rpx;
}
.point-top-rgt {
  height: 162rpx;
}
.point-pic {
  align-self: flex-start;
  flex-shrink: 0
}
.point-name {
  font-size: 30rpx;
  margin-top: 16rpx;
}
.point-desc {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #b8b8b8;
  line-height: 34rpx
}
.point-bot {
  height: 68rpx;
  width: 100%;
  flex-shrink: 0
}
.point-bot-left,.point-bot-rgt {
  width: 50%;
  height: 100%;
}
.point-bot-left {
  padding-left: 15rpx
}
.fg {
  flex-grow: 0;
  margin-right: 32rpx;
}