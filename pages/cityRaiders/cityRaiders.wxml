<view class="con ">
  <search id="search" wx:if="{{focus}}" bind:back="_back" bind:selected="_selected"></search>
  <view class="search" wx:else="{{focus}}">
    <image class="search-icon" src="https://gengxin.odao.com/update/h5/travel/index/search.png"></image>
    <input class="search-city" value='{{inputText}}' placeholder='输入城市名' placeholder-class="font tip" bindfocus='focus'></input>
  </view>
  <view class="flex tips-box">
    <view class="line"></view>
    <text class="tips ">可查看我旅行过的城市</text>
    <view class="line"></view>
  </view>
  <view class="rgt-box f-c">
    <text wx:for="{{abc}}" wx:key="index" bindtap='choose' data-idx="{{index}}" class="rgt font {{num == index?'act': ''}}">{{item}}</text>
  </view>
  <scroll-view class="sv" scroll-y scroll-into-view="A{{num}}" scroll-with-animation="{{true}}">
    <view class="city-list" wx:for="{{province}}" wx:key="{{item.init}}">
      <view class="pro-box f-r-fs">
        <text class="abc font">{{item.init}}</text>
        <text class="pro font">{{item.name}}</text>
      </view>
      <view class="city-box" wx:for="{{item.cities}}" wx:for-index="idx" wx:for-item="ite" wx:key="{{idx}}" id="{{item.init}}{{idx}}" bindtap='check' data-id='{{item.init}}{{idx}}'>
        <view class="city f-r-sb" >
          <text class="c-name">{{ite}}</text>
          <text class="c-per">城市完成度20%</text>
          <image wx:if="{{item.init == checkId}}" class="hook" src="https://gengxin.odao.com/update/h5/travel/raiders/hook.png"></image>
        </view>
        <view class="line-sm"></view>
      </view>

    </view>
  </scroll-view>
   <view class="btn-box flex">
    <image class="jiexian" src="https://gengxin.odao.com/update/h5/travel/common/separatrix.png"></image>
    <view class="btn-icon font">确定</view>
  </view> 
</view>