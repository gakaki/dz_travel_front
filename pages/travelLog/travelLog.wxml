<!--pages/travelLog/travelLog.wxml-->
<view class='travelLog'>
  <view class='share'>
    <image class='share-icon' src='https://gengxin.odao.com/update/h5/travel/travelLog/share.png'></image>
  </view>
  <scroll-view class='reach-city' scroll-y='true'>
    <view class='year'>2018</view>
    <view class='mark mark-start'>起</view>
    <view wx:for='{{init}}' wx:key='{{index}}' wx:for-item='city'>
      <view class='one-city' wx:if='{{city.city}}'>
        <image class='ariplane' src='https://gengxin.odao.com/update/h5/travel/travelLog/airplane.png'></image>
        <view class='mark-circle'></view>
        <view class='log-content'>到达{{city.city}}</view>
        <view class='time'>{{city.time}}</view>
        <view class='timeLine'></view>
      </view>
      <view class='one-city'>
        <image class='ariplane' wx:if='{{city.car}}' src='https://gengxin.odao.com/update/h5/travel/travelLog/airplane.png'></image>
        <view class='mark-circle'></view>
        <view class='log-content'>
          <text>前往</text>
          <text class='detail' wx:for='{{city.scenicSpots}}' wx:for-item="select" wx:key='{{index}}'>{{select}}<text wx:if='{{index != city.scenicSpots.length-1}}'>、</text></text>
        </view>
        <view class='time'>{{city.time}}</view>
        <view class='timeLine'></view> 
      </view> 
    </view> 
  </scroll-view> 
  <view class='btn-wrap'>
    <view class='btn-big-blue' bindtap='toCity'>城市攻略</view>
  </view>
  
</view>
