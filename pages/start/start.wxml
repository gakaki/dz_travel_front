<view class="con">
  <view class="my-gold flex">
    <mygold goldNum="100"></mygold>
    <image class="help" src="https://gengxin.odao.com/update/h5/travel/start/tip.png"></image>
  </view>
  <view class="map">
    <view class="mark flex" style="top:200rpx;left:400rpx;">
      <image src="https://gengxin.odao.com/update/h5/travel/index/add.png"></image>
    </view>
  </view>
  <image class="shadow" src="https://gengxin.odao.com/update/h5/travel/start/shadow.png"></image>
  <view class="tour-info f-c-fs">
    <view class="tips f-r-sb">
      <text>出发地</text>
      <text>目的地</text>
    </view>
    <view class="line f-r-sb">
      <text>上海</text>
      <view class="line-road f-r-sb">
        <view class="xian"></view>
        <image class="plane" src="https://gengxin.odao.com/update/h5/travel/start/plane.png"></image>
        <view class="xian"></view>
      </view>
      <text>哈尔滨</text>
    </view>
    <image class="cut-off" src="https://gengxin.odao.com/update/h5/travel/start/separatrix.png"></image>
    <view class="info f-r-sb">
      <view class="cost flex">
        <text>消耗</text>
        <image class="gold-icon" src="https://gengxin.odao.com/update/h5/travel/start/gold.png"></image>
        <text>4000</text>
        <view class="holiday">
          劳动节
        </view>
      </view>
      <view class="date">
        <text>3月5号</text>
      </view>
    </view>
    <view class="info f-r-sb">
      <view class="double-tip">
        <text>(邀请好友双人旅行消耗6000金币,好友无需购买机票)</text>
      </view>
      <view class="flex">
        <text class="season">春</text>
        <text class="weather">天气</text>
      </view>
    </view>
    <view class="partner">
      <text class="waiting" wx:if="{{isWaiting}}">等待好友结束双人组队邀请······</text>
    </view>
    <view class="info-xian"></view>
    <view class="btn f-r-sa">
      <view class="invite button">
        邀请好友
      </view>
      <view class="ready button">
        出发
      </view>
    </view>
  </view>
</view>
