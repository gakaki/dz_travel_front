/* pages/city/city.wxss */
.wrap{
  background-color: #f5f4f9;
  width: 100wh;
  height: 100vh;
  overflow: hidden;
}

.search{
  width: 710rpx;
  height: 72rpx;
  margin: 16rpx auto;
  background-color: #fff;
  border-radius: 40rpx;
  position: relative; 
}

.search-icon{
  width: 30rpx;
  height: 29rpx;
  position: absolute;
  top: 50%;
  left: 160rpx;
  transform: translate(0,-50%);
}

.search-city{
  display: inline-block;
  height: 100%;
  width: 590rpx;
  position: absolute;
  top: 0;
  left: 60rpx;
}

.tip{
  font-size: 30rpx;
  color: #ccc;
  text-align: center; 
}

.tab{
  height: 92rpx;
  width: 100%;
  border-top: 2rpx solid #e9e8ec;
  border-bottom: 2rpx solid #e9e8ec;
}

.flight{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 92rpx;
}

.flight text{
  font-size: 32rpx;
}

.choose{
  border-bottom: 4rpx solid #278cff;
}

.choose text{
  color: #278cff
}