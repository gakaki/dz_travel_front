/* pages/city/city.wxss */
.wrap{
  background-color: #f5f4f9;
  width: 100wh;
  height: 100vh;
  overflow: hidden;
}

.search{
  width: 710rpx;
  height: 72rpx;
  margin: 16rpx auto;
  background-color: #fff;
  border-radius: 40rpx;
  position: relative; 
}

.search-small{
  margin: 16rpx 0 16rpx 20rpx;
  width: 630rpx;
}

.back{
  font-size: 30rpx;
  color: #8d8d8d;
  position: absolute;
  right: 20rpx;
  top: 32rpx;
}

.search-icon{
  width: 30rpx;
  height: 29rpx;
  position: absolute;
  top: 50%;
  left: 250rpx;
  transform: translate(0,-50%);
}

.icon-left{
  left: 20rpx;
}

.icon-center{
  left: 250rpx;
}

.search-city{
  display: inline-block;
  height: 100%;
  width: 590rpx;
  position: absolute;
  top: 0;
  left: 60rpx;
  font-size: 30rpx;
  color: #8d8d8d;
  line-height: 74rpx;
}

.search-city-small{
  width: 510rpx;
}

.tip{
  font-size: 30rpx;
  color: #ccc;
  text-align: center; 
}

.tab{
  height: 92rpx;
  width: 100%;
  border-bottom: 2rpx solid #e9e8ec;
}

.top{
  border-top: 2rpx solid #e9e8ec;
}

.flight{
  width: 50%;
  height: 100%;
  text-align: center;
  line-height: 92rpx;
}

.flight text{
  font-size: 32rpx;
}

.choose{
  border-bottom: 4rpx solid #278cff;
}

.choose text{
  color: #278cff
}

.choose-city{
  position: absolute;
  top: 200rpx;
  bottom: 138rpx;
  left: 0;
  right: 0;
  overflow: hidden;
}

.zhixiashi{
  display: flex;
  flex-wrap: wrap;
  margin-top: 32rpx;
}

.city{
  display: block;
  height: 56rpx;
  width: 156rpx;
  border-radius: 30rpx;
  border:2rpx solid #c4c3c7;
  text-align: center;
  line-height: 56rpx;
  margin-left: 22rpx;
  margin-bottom: 24rpx;
  color: #878689;
  font-size: 26rpx;
}

.city-choose{
  color: #278cff;
  border:2rpx solid #278cff;
}

.province{
  margin-top:-9rpx;
}

.initial{
  font-size: 48rpx;
  color: #278cff;
  margin-left: 20rpx;
}

.prov-name{
  font-size: 30rpx;
  margin-left: 30rpx;
}

.no-init{
  margin-left: 75rpx;
}

.cities{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.bottom{
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 130rpx;
  justify-content: flex-start;
}

.btn{
  width: 315rpx;
  height: 121rpx;
  background: url("https://gengxin.odao.com/update/h5/travel/index/btn-blue.png") 0 0 no-repeat;
  background-size: cover;
  margin-top: 16rpx;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
  color: #fff;
  margin-left: 40rpx;
}

.confirm{
  letter-spacing: 17rpx;
  padding-left: 17rpx;
}

.cut-off{
  width: 750rpx;
  height: 9rpx;
  background: url("https://gengxin.odao.com/update/h5/travel/index/separatrix.png") 0 0 no-repeat;
  background-size: cover;
  position: absolute;
  left: 0;
  bottom: 130rpx;
}

.search-city-list{
  position: absolute;
  top: 108rpx;
  bottom: 0;
  width: 100%;
  background-color:#f5f4f9;
  z-index: 30; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.list{
  height: 92rpx;
  width: 710rpx;
  border-bottom: 2rpx solid #e9e8ec;
  line-height: 92rpx;
}

.list text:first-of-type{
  padding-left: 20rpx;
}

.list text{ 
  font-size: 32rpx;
  color: #8d8d8d;
}

.list .search-char{
  color: #278cff;
}

.clear{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
}

