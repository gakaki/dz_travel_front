<!--pages/self/self.wxml-->
<view class='self'>
  <view class='header'>
      <avatar src='{{userInfo.avatarUrl}}' nickname='{{userInfo.nickName}}' showGoldAndIntegral='{{mySelf}}' hasIntegral='{{true}}' hasGoldIcon='{{true}}' goldNum='{{20}}' integral='{{50}}'></avatar>
      <navigator class='setting' url='/pages/settings/settings'>
        <image class='setting-icon' src='https://gengxin.odao.com/update/h5/travel/self/setting.png'></image>
      </navigator>
       <view class='des'>
        <view class='des-content' wx:if='{{mySelf}}'> 
          我的足迹已经遍布<text class='des-spec'>34</text>个城市已超越了<text class='des-spec'>75%</text>的驴友
        </view> 
         <view class='des-content' wx:else=''> 
          他的足迹已经遍布<text class='des-spec'>34</text>个城市已超越了<text class='des-spec'>75%</text>的驴友
        </view>  
      </view> 
  </view>

  <view wx:for='{{test}}' wx:key='{{index}}'>{{item}}</view>

  <view class='main f-r-sa'>
    <navigator url='{{item.url}}' wx:for='{{mianTitle}}' wx:key='{{index}}' class='main-wrap f-c' style='border-right:{{index == mianTitle.length-1?"none":"2rpx solid #e5e5e5"}}'>
      <image class='main-icon' src='{{item.icon}}'></image>
      <text class='main-content'>{{item.title}}</text> 
    </navigator >
  </view>
  <scroll-view scroll-y class='list-wrap'>
    <view class='one-list f-r-sb' wx:for='{{list}}' wx:key="{{index}}" style='border-bottom:{{index == list.length-1?"none":"2rpx solid #e5e5e5"}}'>
      <text>{{item.title}}</text>
      <text>{{item.num}}</text>
    </view>
  </scroll-view>
</view>
