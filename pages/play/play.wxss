.bg {
  width: 100vw;
  height: 100vh;
  background: url("https://gengxin.odao.com/update/h5/travel/play/bg1.jpg") 0 0 no-repeat;
  background-size: cover;
}

.task-bg {
  position: relative;
  margin: 0 auto;
  margin-top: 16rpx;
  width: 724rpx;
  height: 174rpx;
  background: url("https://gengxin.odao.com/update/h5/travel/play/task.png") 0 0 no-repeat;
  background-size: cover;
}

.title {
  font-size: 30rpx;
  /* margin-top: 5rpx; */
}

.check {
  width: 30rpx;
  height: 21rpx;
}

.task {
  font-size: 24rpx;
  color: #a3a3a3;
  /* margin-top: 10rpx */
}

.title, .task {
  margin-left: 30rpx;
}

.act {
  color: #278cff;
}

.introduce {
  width: 126rpx;
  height: 40rpx;
  background: url("https://gengxin.odao.com/update/h5/travel/play/btn-sm.png") 0 0 no-repeat;
  background-size: cover;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 22rpx;
  line-height: 40rpx;
  color: #fff;
  text-align: center;
}

.warn-box {
  width: 520rpx;
  height: 44rpx;
  border-radius: 30rpx;
  background-color: rgba(0, 0, 0, 0.6);
  margin: 0 auto;
  margin-top: 10rpx;
}

.warn-str {
  font-size: 20rpx;
  color: #fff;
  font-weight: normal;
  letter-spacing: 3rpx;
}

.ribao {
  width: 750rpx;
  height: 359rpx;
  background: url("https://gengxin.odao.com/update/h5/travel/play/ribao.png") 0 0 no-repeat;
  background-size: cover;
  position: fixed;
  left: 0;
  bottom: 0;
}

.rb-top {
  width: 670rpx;
  height: 204rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #e9e8ec;
  flex-shrink: 0;
}

.ib {
  display: block;
}

.rb-city {
  margin-top: 50rpx;
  font-size: 36rpx;
}

.rb-dedail {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: #a3a3a3;
  line-height: 36rpx;
}

