.yuanquan {
  background-color: #ffc705;
  width: 10rpx;
  height: 10rpx;
  /* background-color: #ffc705; */
  border-radius: 50%;
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

.yuanquan1 {
  width: 20rpx;
  height: 20rpx;
}

.yuanquan2 {
  width: 30rpx;
  height: 30rpx;
}

.wq-donghua {
  animation: weiqi-yuanquan 2s linear infinite;
}

.wq-donghua1 {
  animation: weiqi-yuanquan1 2s linear infinite;
}

.wq-donghua2 {
  animation: weiqi-yuanquan2 2s linear infinite;
}

@keyframes weiqi-yuanquan {
  0% {
    width: 0;
    height: 0;
    right: 0;
    /* transform: scale(0) */
  }

  100% {
    width: 10rpx;
    height: 10rpx;
    right: 40rpx;
    /* transform: scale(1) */
  }
}

@keyframes weiqi-yuanquan1 {
  0% {
    width: 5rpx;
    height: 5rpx;
    right: 15rpx;
    /* transform: scale(0) */
  }

  100% {
    width: 20rpx;
    height: 20rpx;
    right: 60rpx;
    /* transform: scale(1) */
  }
}

@keyframes weiqi-yuanquan2 {
  0% {
    width: 10rpx;
    height: 10rpx;
    right: 20rpx;
    /* transform: scale(0) */
  }

  100% {
    width: 30rpx;
    height: 30rpx;
    right: 90rpx;
    /* transform: scale(1) */
  }
}

@keyframes role-clip-nan {
  100% {
    background-position: right 0;
  }
}

@keyframes role-clip-nv {
  100% {
    background-position: right 0;
  }
}

.stand {
  background-position: 0 0;
}

.walk-nan {
  animation: role-clip-nan 0.6s steps(5) infinite;
}

.walk-nv {
  animation: role-clip-nv 0.6s steps(5) infinite;
}

