/* pages/play2/pops/eventQuest.wxss */
@import "/app.wxss";
.dialog_question, .dialog-result{
    width: 610rpx;
    min-height: 1100rpx;
    background-color: #fff;
    border-radius: 20rpx;
    overflow: hidden;
    padding: 20rpx 15rpx;
    position: relative;
}

.div_question {
    padding: 20rpx 0;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 40rpx;
}

.div_answers {
    width: 580rpx;
  height: 420rpx;
    margin: 0 auto;
    margin-top: 50rpx;
}

.div_answers .answer_options {
  width: 100%;
    background-color: #EFEFEF;
    border-radius: 80rpx;
    text-indent: 40rpx;
    text-align: left;
    font-weight: 350;
    font-size: 32rpx;
    color: #959595;
    padding: 24rpx 0;
    /* margin: 0 10rpx 20rpx; */
    box-sizing: border-box;
}
.mb {
  margin-bottom: 150rpx
}
  

.pic-box {
    width: 580rpx;
    height: 464rpx;
    margin: 0 auto;
    overflow: hidden;
    position: relative;
}

.pic {
    width: 580rpx;
    height: 464rpx;
    display: block;
    margin: 0 auto;
}


.content-box {
    text-align: center;
}

.ten {
    position: absolute;
    display: inline-block;
    bottom: 20rpx;
    right: 20rpx;
    background-color: rgba(0,0,0, .5);
    border-radius: 20rpx;
    color: #ffffff;
    font-weight: bold;
    font-size: 30rpx;
    padding: 3rpx 10rpx;

}

.congratulations-head-font, .congratulations-gray-font {
    display: block;
    width: 100%;
    text-align: center;
    margin-top: 50rpx;
}

.congratulations-head-font {
    font-size: 62rpx;
    line-height: 62rpx;
}
.congratulations-gray-font {
    font-size: 40rpx;
    line-height: 40rpx;
    color: gray;
}

.btn-big-blue {
    position: absolute;
    left: 50%;
    bottom: 100rpx;
    width: 406rpx;
    height: 121rpx;
    transform: translate(-50%);
    background: url("https://gengxin.odao.com/update/h5/travel/common/wid-max-bin.png") 0 0 no-repeat;
    background-size: cover;
    font-size: 32rpx;
    line-height: 94rpx;
    color: #fff;
    text-align: center;
}

.close{
  height: 50rpx;
  width: 50rpx;
  position: absolute;
  right: 0;
  top: 0;
  z-index: 10;
}

.icon-close{
  height: 27rpx;
  width: 27rpx;
}
.sm {
  letter-spacing: 4rpx;
  padding-left: 4rpx;
}
.big {
  letter-spacing: 20rpx;
  padding-left: 20rpx;
}