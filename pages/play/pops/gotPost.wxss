/* pages/play2/pops/gotPost.wxss */
.line, .cir {
    position: absolute;
    top: 10rpx;
    left: 50%;
    transform: translate(-50% 0);

}
.line {
    width: 12rpx;
    height: 210rpx;
    top: -190rpx;
}

.cir {
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background-color: #b9c3d0;
    box-shadow: 0 0 2rpx 0 inset;
}

.postal {
    width: 550rpx;
    height: 850rpx;
    background-color: #fff;
    box-shadow: 0 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
    padding: 40rpx 30rpx 0 30rpx;
    text-align: center;
}

.text {
    width: 100%;
    display: block;
}
.post-pic {
    width: 550rpx;
    height: 515rpx;
    background-color: rgba(0, 0, 0, 0.1);
}

.post-name {
    font-size: 36rpx;
    color: #000;
    margin: 20rpx 0;
}

.post-desc {
    font-size: 30rpx;
    color: #8d8d8d;
    margin-bottom: 10rpx;
    letter-spacing: 2rpx;
}

.cfm-btn {
    width: 460rpx;
    height: 80rpx;
    color: #ffffff;
    font-size: 36rpx;
    line-height: 78rpx;
    text-align: center;
    background-color: #278cff;
    border-radius: 40rpx;
    box-shadow: 0 10rpx 20rpx #b0d3eb;
    text-align: center;
    margin: 20rpx auto;
}