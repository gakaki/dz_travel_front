<!--pages/footprint/footprint.wxml-->
<view class='footprint'>
  <avatar integral='{{integral}}' goldNum='{{gold}}' src='{{user.avatarUrl}}' nickname='{{user.nickName}}'></avatar>
  <view class='des-content'>
    已点亮<text class='des-spec'>{{reachrovince}}</text>个省份，<text class='des-spec'>{{totalArrive}}</text>个城市，足迹已遍布全中国<text class='des-spec'>{{totalArrivePercent}}</text>的城市，旅游完成度达到<text class='des-spec'>{{travelPercent}}</text>
  </view> 
   <cmap id='map' conWd='{{mapConWd}}' conHt='{{mapConHt}}' uid='{{userInfo.uid}}' log='{{true}}'></cmap> 
</view>

