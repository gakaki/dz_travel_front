}

.line-1{
  width: 710rpx;
  height: 2rpx;
  background-color: #e9e8ec;
  margin-left: 20rpx;
}

.line-2{
  width: 100%;
  height: 8rpx;
  background-color: #e9e8ec;
}

.desc{
  width: 100%;
  height: 102rpx;
  font:bold 30rpx "Microsoft YaHei";
  color: #b0afb3;
  text-align: center;
}

