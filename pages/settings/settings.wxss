}

.wenti{
  width: 120rpx;
  margin-top: 160rpx;
  font:bold 30rpx "Microsoft YaHei";
  color: #b0afb3;
  margin-left: 50%;
  transform:translate(-50%,0);
  line-height: 36rpx;
  border-bottom: 2rpx solid #b0afb3;
  position: relative;
}

.contact{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.button{
  width: 356rpx;
  height: 121rpx;
  margin-top: 76rpx;
  background: url('https://gengxin.odao.com/update/h5/travel/common/confirm.png') 0 0 no-repeat;
  background-size: cover;
  margin-left: 50%;
  transform:translate(-50%,0);
  font:bold 30rpx "Microsoft YaHei";
  color: #fff;
  text-align: center;
  position: relative;
}

.confirm{
  line-height: 85rpx;
}

.save{
