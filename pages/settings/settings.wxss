}

.info-1{
  color: #d4d3d8;
}
 
.address{
  width: 100%;
  height: 213rpx;
  display: flex;
  justify-content: space-between;
}

.address-left{
  margin-top: 40rpx;
}

.address-right{
  margin-top: 40rpx;
  width: 473rpx;
  height: 157rpx;
