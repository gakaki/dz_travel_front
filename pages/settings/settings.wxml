<view class="settings">
  <image class="separatrix" src="https://gengxin.odao.com/update/h5/travel/common/separatrix.png"></image>
  <view class="name info">
    <text class="name-left info-left">真实姓名：</text>
    <input class="name-right info-right" bindinput='getname' bindblur='getname' placeholder='请输入真实姓名' placeholder-class='info-1'></input>
  </view>
  <view class="line-1"></view>
  <view class="birthday info">
    <text class="birthday-left info-left">生日：</text>
    <input class="birthday-right info-right" bindinput='getbirthd' bindblur='getbirthd' placeholder='请输入生日' placeholder-class='info-1'>2018/02/12</input>
  </view>
  <view class="line-1"></view>
  <view class="phone info">
    <text class="phone-left info-left">手机号：</text>
    <input class="phone-right info-right" bindinput='getphone' bindblur='getphone' placeholder='请输入手机号' placeholder-class='info-1'></input>
  </view>
  <view class="line-1"></view>
  <view class="address">
    <text class="address-left info-left">地址：</text>
    <input class="address-right info-right" bindinput='getValue' bindblur='getValue' placeholder='请输入地址' placeholder-class='info-1'></input>
  </view>
  <view class="line-2"></view>
  <view class="desc">
    <view class="desc-top">
      <text>个人信息用于积分兑换快递物品</text>
    </view>
    <view class="desc-bottom">
      <text>请填写真实信息,以免无法收到物品</text>
    </view>
  </view>
  <view class="wenti">
    <text>问题反馈</text>
    <button open-type='contact' class="contact"></button>
  </view>
  <view class="button" bindtap='saveDress'>
    <text class="confirm">保 存</text>
  </view>
</view>
