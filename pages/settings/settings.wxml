<view class="settings">
<tip wx:if="{{tipPop}}" bind:hidetip="hideTipPop" str='{{tipStr}}'></tip>
  <form bindsubmit='formSubmit'>
    <image class="separatrix" src="https://gengxin.odao.com/update/h5/travel/common/separatrix.png"></image>
    <view class="name info">
      <text class="name-left info-left">真实姓名：</text>
      <input class="name-right info-right" name='name' placeholder='{{name}}' placeholder-class='info-1' value="{{vname}}"></input>
    </view>
    <view class="line-1"></view>
    <picker class="birthday picker" name='birthday' mode="date" value="{{birthday}}" start="1910-01-01" end="2018-01-01" bindchange="chooseDate">
      <view class="info">
        <text class="birthday-left info-left">生日：</text>
        <text class="birthday-right info-right {{changeColor ? '' : 'info-1'}}" >{{birthday}}</text>
      </view>
    </picker>
    <view class="line-1"></view>
    <view class="phone info">
      <text class="phone-left info-left">手机号：</text>
      <input class="phone-right info-right" type='number' name='phone' placeholder='{{phone}}' placeholder-class='info-1' bindblur='checkPhone' value='{{vphone}}'></input>
    </view>
    <view class="line-1"></view>
    <view class="address">
      <text class="address-left info-left">地址：</text>
      <textarea class="address-right info-right" maxlength='45' fixed name='address' placeholder='{{address}}' placeholder-class='info-1' value='{{vaddress}}'></textarea>
    </view>
    <view class="line-2"></view>
    <view class="desc">
      <view class="desc-top">
        <text>个人信息用于积分兑换快递物品</text>
      </view>
      <view class="desc-bottom">
        <text>请填写真实信息,以免无法收到物品</text>
      </view>
    </view>
    <view class="wenti">
      <text>问题反馈</text>
      <button open-type='contact' class="contact"></button>
    </view>
    <view class="button">
      <text class="confirm">保 存</text>
      <button form-type='submit' class="save"></button>
    </view>
  </form>
</view>
