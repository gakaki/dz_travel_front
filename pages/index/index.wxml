<!--pages/index/index.wxml-->
<view class='wrap'>
  <view class="info f-r-sb">
    <view class="person flex">
      <view class="avatar">
        <image></image>
      </view>
      <view class="person-info">
        <view class="name">
          <text class="font">胖迪</text>
        </view>
        <view class="gold-info flex">
          <image class="gold-icon" src="https://gengxin.odao.com/update/h5/travel/props/gold.png"></image>
          <text class="font">1000</text>
          <image class="add" src="https://gengxin.odao.com/update/h5/travel/props/plus.png"></image>
        </view>
      </view>
    </view>
    <view class="location">
      <view class='font'>
        <text class="city">上海</text>
        <text class="today">3月5号</text>
      </view>
      <view class="font f-r-fe tianqi">
        <text class="today">春</text>
        <image class="weather" src="https://gengxin.odao.com/update/h5/travel/index/sun.png"></image>
      </view>
    </view>
  </view>
  <view class="ad">
    广告位
  </view>
  <view class="main">
    <view class="travel">
      <view class="content">
        <text class="font">旅行人数</text>
      </view>
      <view class="number">
        <text class="font">2000</text>
      </view>
    </view>
    <!-- <view class="map"> -->
      <!-- <view class="mark flex" style="top:200rpx;left:400rpx;">
        <image src="https://gengxin.odao.com/update/h5/travel/index/add.png"></image>
      </view>
    </view> -->
    <canvas style="width: 750rpx; height: 300px;" canvas-id="map"></canvas>
    <view class="choose f-r-sb">
      <view class="city-travel btn font">
        城市游玩
      </view>
      <view class="fly btn font" bindtap='toFly'>
        起飞旅行
      </view>
    </view>
    <view class="message" bindtap='toMessage'>
      <text class="font">99</text>
    </view>
  </view>
  <view class="cut-off"></view>
  <view class="tips f-c" wx:if="{{isFirst}}">
    <image class="piaodai-left" src="https://gengxin.odao.com/update/h5/travel/index/sidai-zuo.png"></image>
    <image class="piaodai-right" src="https://gengxin.odao.com/update/h5/travel/index/sidai-right.png"></image>
    <image class="area" src="https://gengxin.odao.com/update/h5/travel/index/area.png"></image>
    <view class="welcome">
      欢迎来到<text class="name">点亮足迹</text>
    </view>
    <view class="free single font">
      首次起飞机票<text>免费</text>  
    </view>
    <view class="free double font">
      首次双人旅行机票<text>免费</text>
    </view>
    <view class="btn-fly" bindtap='toFly'>
      起飞旅行
    </view>
  </view>
  <view class="mask" wx:if="{{isFirst}}"></view>
</view>
