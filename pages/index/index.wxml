<!--pages/index/index.wxml-->
<view class='wrap'>
  <view class="info f-r-sb">
    <view class="person flex">
      <view>
        <image class="avatar" src="{{avatar}}"></image>
      </view>
      <view class="person-info f-c">
        <view class="name">
          <text class="font">{{nickName}}</text>
        </view>
        <view class="gold-info flex">
          <image class="gold-icon" src="https://gengxin.odao.com/update/h5/travel/props/gold.png"></image>
          <text class="font">{{gold}}</text>
          <image class="add" src="https://gengxin.odao.com/update/h5/travel/props/plus.png"></image>
        </view>
      </view>
    </view>
    <view class="location">
      <view class='font'>
        <text class="city" wx:if="{{location}}">{{location}}</text>
        <text class="today">{{date}}</text>
      </view>
      <view class="font f-r-fe tianqi">
        <text class="today">{{season}}</text>
        <image class="weather" src="https://gengxin.odao.com/update/h5/travel/weather/{{weather}}.png"></image>
      </view>
    </view>
  </view>
  <view class="ad" bindtap='toIntegralShop'>
    广告位
  </view>
  <view class="main">
    <cmap id='map' conWd='{{mapConWd}}' conHt='{{mapConHt}}' uid='{{uid}}' players='{{players}}'></cmap>
    <view class="travel" bindtap='test'>
      <view class="content">
        <text class="font">旅行人数</text>
      </view>
      <view class="number">
        <text class="font">{{playerCnt}}</text>
      </view>
    </view>
    <view class="choose">
      <view class="city-travel btn font" bindtap='toPlay'>
        城市游玩
      </view>
      <view class="fly btn font" bindtap='toFly'>
        起飞旅行
      </view>
    </view>
    <view class="message" bindtap='toMessage' wx:if="{{messages}}">
      <text class="font">{{messages}}</text>
    </view>
  </view>
  <view class="cut-off"></view>
  <view class="tips f-c" wx:if="{{isFirst}}">
    <image class="piaodai-left" src="https://gengxin.odao.com/update/h5/travel/index/sidai-zuo.png"></image>
    <image class="piaodai-right" src="https://gengxin.odao.com/update/h5/travel/index/sidai-right.png"></image>
    <image class="area" src="https://gengxin.odao.com/update/h5/travel/index/area.png"></image>
    <view class="welcome">
      欢迎来到<text class="name">点亮足迹</text>
    </view>
    <view class="free single font">
      首次起飞机票<text>免费</text>  
    </view>
    <view class="free double font">
      首次双人旅行机票<text>免费</text>
    </view>
    <view class="btn-fly" bindtap='toFly'>
      起飞旅行
    </view>
  </view>
  <view class="free-ticket bs" wx:if="{{showTicket}}">
    <view class="free-title">
      <text>您有系统赠送机票可使用</text>
    </view>
    <scroll-view class="all-ticket" scroll-y>
      <view class="choose-ticket f-r-sb" wx:for="{{presentTkt}}" wx:key="{{index}}" data-ind="{{index}}" data-type="{{item.type}}" data-cid="{{item.cid}}" data-city="{{item.city}}" data-tid="{{item.tid}}" bindtap='chooseTicket'>
        <view class="choose-address">
          <view class="choose-grey">
            <view class="choose-red" wx:if="{{index == chooseInd}}"></view>
          </view>
          <text class="choose-province">飞往{{item.province}}</text>
          <text class="choose-city">{{item.city}}</text>
        </view>
        <text class="ticket-species">{{item.tkt}}</text>
      </view>
    </scroll-view>
    <view class="button-ticket f-r-sb">
      <view class='buy-ticket' bindtap='buyTkt'>
        <text>购买机票</text>
      </view>
      <view class="use-ticket" bindtap='useTkt'>
        <text>使用机票</text>
      </view>
    </view>
  </view>
  <view class="mask" wx:if="{{isFirst || showTicket}}"></view>
</view>
<sign theDay='{{theDay}}' hasSign='{{hasSign}}' ></sign> 

