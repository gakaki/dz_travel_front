<!--components/sign/sign.wxml-->
<view class='mask' wx:if='{{hasSign == 0}}'>
  <view class='drop'>
   <image class='line' src='https://gengxin.odao.com/update/h5/travel/sign/line.png'></image>  
  </view>
  <view class='main'>
    <view class='circle'></view>
    <view class='title'>每日签到</view>
    <view class='seven-day f-r-sa'>
      <view class='one-day f-c-fs' wx:for='{{init}}' wx:key='{{index}}'>
        <text class='day-title' wx:if='{{index+1>=theDay}}'>{{index+1}}天</text> 
        <text class='day-title signed' wx:else=''>已签到</text>
        <image class='gold-icon' wx:if='{{index+1>=theDay}}' src='https://gengxin.odao.com/update/h5/travel/sign/gold{{index+1}}.png'></image> 
        <image class='sign-icon' wx:else='' src='https://gengxin.odao.com/update/h5/travel/sign/sign.png'></image>
        <text class='gold-num'>{{item}}金币</text>
      </view>
    </view>
    <view class='line-bar'></view>
    <view class="btn-big-blue btn" bindtap='toSign'>签到</view>
  </view>
</view> 
