/* components/sign/sign.wxss */
.mask{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}
.f-c-fs {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.btn-big-blue {
  color: #fff;
  width: 446rpx;
  height: 127rpx;
  background: url('https://gengxin.odao.com/update/h5/travel/raiders/big-btn-blu.png') no-repeat;
  background-size: cover;
  line-height: 90rpx;
  letter-spacing: 3rpx;
  text-align: center; 
}
.drop {
  position: absolute;
  left: 50%;
  top: 0;
  margin-left: -6rpx;
  width: 12rpx;
  height: 170rpx;
}
.line {
  width: 12rpx;
  height: 170rpx;
}
.main {
  margin: 152rpx auto 0;
  width: 685rpx;
  height: 836rpx;
  border-radius: 30rpx;
  background: #fff;
  box-shadow: 0 0 10rpx 2rpx rgba(0, 0, 0, 0.3);
}
.circle {
  margin: 0 auto; 
  transform: translateY(12rpx);
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #b9c3d0;
}
.title {
  margin-top: 12rpx;
  background: url('https://gengxin.odao.com/update/h5/travel/sign/pd.png') center center no-repeat;
  background-size: 404rpx 82rpx;
  font: bold 40rpx/70rpx 'Microsoft YaHei'; 
  text-align: center;
  color: #fff;
}
.seven-day {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 40rpx;
}
.one-day {
  margin: 0 10rpx 50rpx;
  width: 146rpx;
  height: 200rpx;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx 2rpx rgba(0, 0, 0, 0.3);
}
.day-title {
  margin: 10rpx auto 0;
  border: 2rpx solid #278cff;
  width: 96rpx;
  height: 32rpx;
  border-radius: 30rpx;
  color: #278cff;
  font: bold 24rpx/32rpx 'Microsoft YaHei'; 
  text-align: center;
}
.signed {
  color: #fff;
  background: #278cff;
}
.gold-icon {
  margin-top: 20rpx;
  width: 114rpx;
  height: 80rpx;
}
.sign-icon {
  margin: 27rpx 0 17rpx;
  width: 78rpx;
  height: 56rpx;
}
.gold-num {
  font: bold 24rpx/54rpx 'Microsoft YaHei';   
}
.line-bar {
  margin: 0 20rpx;
  height: 2rpx;
  background: #f2f2f2;
}
.btn {
  margin: 37rpx auto 0;
}