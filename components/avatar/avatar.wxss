/* components/avatar/avatar.wxss */
.user {
  display: flex;
  padding: 0 20rpx;
}
.avatar-icon {
  display: inline-block;
  margin-right: 20rpx;
  width: 120rpx;
  height: 120rpx;
  background: red;
  border-radius: 50%;
}
.user-info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.integral {
  margin-left: 20rpx;
  font: bold 26rpx/44rpx 'Microsoft YaHei';
  color: #fc6161;
  border: 2rpx solid #fc6161;
  padding: 0 17rpx;
  border-radius: 30rpx; 
  min-width: 96rpx;
}
.gold-wrap {
  display: flex;
}

.nickname {
  font: bold 36rpx/1 'Microsoft YaHei';
}