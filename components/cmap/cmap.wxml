<!--components/cmap/cmap.wxml-->
<scroll-view class='cmap-con' scroll-x='{{true}}' scroll-y='{{true}}'
  scroll-left='{{scrollLeft}}' scroll-top='{{scrollTop}}'
  bind:touchstart='touchStart' bind:touchmove='touchMove' bind:touchend='touchEnd' bind:tap='touchTap'
>
   <view class='cmap-layer {{double ? "double": "normal"}} areas'>1
    <element wx:for='{{areas}}' wx:key='{{index}}' item='{{item}}'></element>
  </view>
  <view class='cmap-layer {{double ? "double": "normal"}} lines'>2
    <element wx:for='{{lines}}' wx:key='{{index}}' item='{{item}}'></element>
  </view>
  <view class='cmap-layer {{double ? "double": "normal"}} points'>3
    <element wx:for='{{points}}' wx:key='{{index}}' item='{{item}}'></element>
  </view> 
</scroll-view>