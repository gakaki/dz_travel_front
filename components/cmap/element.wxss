/* components/cmap/element.wxss */
.map-ele {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 18rpx;
}
.ele-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.ele-player {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 4rpx solid red;
  overflow: hidden;
  transform: translateY(-100%);
}
.player-loc {
  z-index: -2;
  position: absolute;
  top: -2rpx;
  left: 10rpx;
  z-index: -2;
  width: 0;
  height: 0;
  display: inline-block;
  
  border-style: solid;
  border-width: 16rpx 8rpx 0 8rpx;
  border-color: red transparent transparent transparent;
}
