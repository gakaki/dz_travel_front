/* components/cmap/element.wxss */
.map-ele {
  z-index: 10;
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 18rpx;
}
.ele-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.map-player {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: red;
  border: 4rpx solid red;
  overflow: hidden;
  transform: translateY(-120%);
}
.player-loc {
  z-index: -2;
  width: 8rpx;
  height: 12rpx;
  display: inline-block;
  margin-top: 28rpx;
  background: red;
  
  border-style: solid;
  border-width: 12rpx 4rpx 0 4rpx;
  border-color: red transparent transparent transparent;
}
