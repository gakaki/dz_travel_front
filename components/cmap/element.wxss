/* components/cmap/element.wxss */
.map-ele {
  width: 100%;
  height: 100%;
  text-align: center;
  font-size: 18rpx;
}
.ele-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.player-shadow{
  transform: translate(-60%,-150%); 
}

.ele-player {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  border: 4rpx solid white;
  overflow: hidden;
  box-shadow: 3rpx 0 #dddddd,-3rpx 0 #dddddd,0 -2rpx #f3f3f3;
  /* transform: translateY(-100%); */
  
}

.player-shadow::before{
  content: '';
  position: absolute;
  top: 18rpx;
  left: 8rpx;
  z-index: -2;
  width: 23rpx;
  height: 23rpx;
  display: inline-block;
  /* border-style: solid;
  border-width: 16rpx 8rpx 0 8rpx;
  border-color: white; */
  transform:rotate(-45deg);
  box-shadow: 0 0 2rpx 4rpx #adadad;
}

