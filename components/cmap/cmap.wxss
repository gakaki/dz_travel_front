/* components/cmap/cmap.wxss */
.cmap-con {
  width:100vw;
  height: 80vh;
   overflow: scroll; 
  position: relative;
}

.cmap-layer {
  position: absolute;
  box-sizing: border-box;
  text-align: center;
  border: 2rpx solid red;
}

.normal{
  width:100vw;
  height: 100vh;
  transform: scale(1, 1) translate(0,0);
}
.double {
  width:200vw;
  height:200vh;
  transform: scale(2, 2) translate(25%, 25%);
}

.areas {

  background-color: rgba(100, 30, 60, .5);
}
.lines {
  background-color: rgba(200, 100, 80, .5);
}
.points {
  background-color: rgba(89, 200, 20, .5);
}
.ttt1 {
  position: absolute;
  top: 10rpx;
}

.ttt {
  position: absolute;
  bottom: 10rpx;
}