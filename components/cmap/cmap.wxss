/* components/cmap/cmap.wxss */
.cmap-con {
  width:100vw;
  height: 80vh;
   overflow: scroll; 
  position: relative;
}

.cmap-layer {
  width: 120vw;
  height: 100vh;
  position: absolute;
  box-sizing: border-box;
  text-align: center;
}

.normal{
  transform: scale(1, 1);
}
.double {
  transform: scale(2, 2);
}

.areas {
  padding-top: 30rpx;

  background-color: rgba(100, 30, 60, .5);
}
.lines {
  padding-top: 90rpx;
  background-color: rgba(200, 100, 80, .5);
}
.points {
  padding-top: 160rpx;
  background-color: rgba(89, 200, 20, .5);
}