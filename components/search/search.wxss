/* components/search/search.wxss */
.top{
  border-bottom: 2rpx solid #e9e8ec;
  z-index: 99
}

.search{
  width: 630rpx;
  height: 72rpx;
  margin: 16rpx 0 16rpx 20rpx;
  background-color: #fff;
  border-radius: 40rpx;
  position: relative;
}

.search-icon{
  width: 30rpx;
  height: 29rpx;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translate(0,-50%);
}

.search-city{
  display: inline-block;
  height: 100%;
  width: 510rpx;
  position: absolute;
  top: 0;
  left: 60rpx;
  font-size: 30rpx;
  color: #8d8d8d;
}

.tip{
  font-size: 30rpx;
  color: #ccc;
  font-weight: 700;
}

.back{
  font-size: 30rpx;
  color: #8d8d8d;
  position: absolute;
  right: 20rpx;
  top: 32rpx;
}

.clear{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translate(0,-50%);
}

.search-city-list{
  position: absolute;
  top: 108rpx;
  bottom: 0;
  width: 100%;
  background-color:#f5f4f9;
  z-index: 30; 
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
}

.list{
  height: 92rpx;
  width: 710rpx;
  border-bottom: 2rpx solid #e9e8ec;
  line-height: 92rpx;
}

.list text:first-of-type{
  padding-left: 20rpx;
}

.list text{ 
  font-size: 32rpx;
  color: #8d8d8d;
}

.list .search-char{
  color: #278cff;
}
