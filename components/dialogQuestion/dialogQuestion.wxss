@import "/app.wxss";

.dialog_question {
  width: 80%;
  height: 90%;
  background-color: #fff;
  border-radius: 40rpx;
  margin: 0 auto;
  overflow: hidden;
  margin-top: 3%;
  padding:2.5%;
}

.div_question{
    padding:3% 0;
    font-size: 40rpx;
    font-weight:400;
    line-height: 40rpx;
}
.div_answers{
  width : 100%;
}
.div_answers view{
  background-color: #EFEFEF;
  border-radius: 41rpx;
  text-indent: 30rpx;
  text-align: left;
  font-weight: 350;
  font-size: 40rpx;
  color: #959595;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}
.question {
  padding:30rpx 0rpx;
}

.pic-box {
  width: 100%;
  height: 595rpx;
  position: relative;
}

.point-pic {
  width: 100%;
  height: 100%;
}

.font_gray_big {
