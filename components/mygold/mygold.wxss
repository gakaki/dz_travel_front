.box {
  position: relative;
  height: 44rpx;
  min-width: 130rpx;
  border: 2rpx solid #fc6161;
  border-radius: 30rpx;
}
.gold {
  display: inline-block;
  width: 38rpx;
  height: 38rpx;
  margin: 3rpx 10rpx 0 3rpx;
  vertical-align: top;
}
.num {
  display: inline-block;
  padding-right: 40rpx;
  font:  bold 26rpx/44rpx 'Microsoft YaHei';
  color: #fc6161;
  vertical-align: top;
}
.plus {
  position: absolute;
  right: 13rpx;
  top: 14rpx;
  width: 16rpx;
  height: 16rpx;
}